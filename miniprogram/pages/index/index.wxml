<!--index.wxml-->
<scroll-view class="page" scroll-y="true" scroll-with-animation='true' scroll-top="{{topNum}}" bindscrolltolower="lower" bindscrolltoupper="upper">
    <view class="fist-part">
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
                </label>
            </view>
            <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
        </view>

        <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时搜索文本</view>
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时搜索文本</view>
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时搜索文本</view>
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时搜索文本</view>
                </view>
            </navigator>
        </view>

		<swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000" duration="600" hidden="{{swiperOn}}">
		<block wx:for="{{movies}}" wx:for-index="index">  
			<swiper-item>  
			<image src="{{item.url}}" class="slide-image" mode="aspectFill"/>  
			</swiper-item>  
		</block>  
		</swiper>
	</view>

	<view class="weui-tab">
		<view class="weui-navbar">
			<block wx:for="{{tabs}}" wx:key="*this">
				<view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
					<view class="weui-navbar__title">{{item}}</view>
				</view>
			</block>
			<view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
		</view>
		<scroll-view class="weui-tab__panel" scroll-y="{{scrollable}}" scroll-with-animation='true' scroll-top="{{tabTop}}">
			
			<view class="weui-tab__content" hidden="{{activeIndex != 0 || content}}">
				<view class="empty"></view>
				<block wx:for="{{titles.lifes}}">
					<view class="tab_content_element" bindtap="onTapTitle" data-id="{{item.id}}" data-title="{{item.title}}" data-content="{{item.content}}">{{item.title}}</view>
				</block>
			</view>
			
			<view class="weui-tab__content" hidden="{{activeIndex != 1 || content}}">
				<view class="empty"></view>
				<block wx:for="{{titles.works}}">
					<view class="tab_content_element" bindtap="onTapTitle" data-id="{{item.id}}" data-title="{{item.title}}" data-content="{{item.content}}">{{item.title}}</view>
				</block>
			</view>

			<view class="weui-tab__content" hidden="{{activeIndex != 2 || content}}">
				<view class="empty"></view>
				<block wx:for="{{titles.funs}}">
					<view class="tab_content_element" bindtap="onTapTitle" data-id="{{item.id}}" data-title="{{item.title}}" data-content="{{item.content}}">{{item.title}}</view>
				</block>
			</view>
			<view class="weui-tab__content" hidden="{{activeIndex != 0 || !content}}">
			</view>
		</scroll-view>
	</view>
	<view bindtap="tapSearch">
		<image class="post_button" id="search_float" src="../../src/icon/sousuo.png"/>
	</view>
	<view bindtap="tapHome" hidden="{{!swiperOn}}">
		<image class="post_button" id="home_float" src="../../src/icon/home-2.png"/>
	</view>
</scroll-view>