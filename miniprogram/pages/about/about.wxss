/* miniprogram/pages/about/about.wxss */

.background {
  background-image: url(https://i.loli.net/2019/04/26/5cc267e3aa839.png);
  background-size: cover;
  background-position: center bottom;
  height: 100%;
  color: dimgrey;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.UCenter-bg {
  display: flex;
  justify-content: center;
  padding-top: 25%;
  position: relative;
  flex-direction: column;
  align-items: center;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.text-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.return {
  height: 400rpx;
}
